FROM php:5.6-fpm-alpine as build

RUN \
  apk add --no-cache $PHPIZE_DEPS libmemcached-dev zlib-dev 

WORKDIR /tmp

RUN \
  wget https://pecl.php.net/get/memcache-2.2.6.tgz \
  && tar zxvf memcache-2.2.6.tgz \
  && ( \
      cd /tmp/memcache-2.2.6 \
      && /usr/local/bin/phpize /tmp/memcache-2.2.6   \
      && ./configure && make -j$(nproc) && make install \
      && docker-php-ext-enable memcache \
    ) \
    && rm memcache-2.2.6.tgz && rm -r memcache-2.2.6/

RUN \
  apk update && apk upgrade && apk add --no-cache freetype-dev libjpeg-turbo-dev libpng-dev && \
  docker-php-ext-configure gd --with-freetype --with-jpeg &&\
  docker-php-ext-install -j$(($(nproc) + 2)) gd

RUN \
  apk add --no-cache bzip2-dev curl-dev libxml2-dev libzip-dev tidyhtml-libs tidyhtml-dev libxslt-dev && \
  docker-php-ext-install -j$(($(nproc) + 2)) bcmath bz2 calendar ctype curl dba \
  iconv mysqli opcache pcntl pdo pdo_mysql phar posix \
  session shmop soap sockets sysvmsg sysvsem sysvshm tokenizer \
  xml xmlrpc xmlwriter xsl zip
#tidy

FROM build as bitrix
COPY conf.d/php.ini /usr/local/etc/php/conf.d/php.ini
COPY conf.d/fpm.conf /usr/local/etc/php-fpm.d/www.conf

RUN \
  mkdir /var/www/bitrix && chown www-data: /var/www/bitrix && \
  mkdir /var/www/log/ && touch /var/www/log/php-error.log && \
  touch /var/www/log/fpm-access.log && \
  chown www-data: /var/www/log/

WORKDIR /var/www/bitrix
